<UserControl x:Class="TRGE.View.Controls.AudioControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:TRGE.View.Controls"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid x:Name="_content" HorizontalAlignment="Stretch">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="150"/>
            <ColumnDefinition Width="20"/>
        </Grid.ColumnDefinitions>

        <TextBlock Text="{Binding LevelName}"
                   HorizontalAlignment="Left"
                   VerticalAlignment="Center"/>

        <ComboBox Grid.Column="1"
                  VerticalAlignment="Center"
                  ItemsSource="{Binding AudioData}"
                  DisplayMemberPath="Item2"
                  
                  SelectedValuePath="{Binding LevelTrack}"/>

        <Button Content="&#9654;"
                Grid.Column="2"
                VerticalAlignment="Center"/>
    </Grid>
</UserControl>